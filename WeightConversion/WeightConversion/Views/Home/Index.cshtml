@model WeightConversion.Models.UnitConversionModel

<!DOCTYPE html>
<html>
    <head>
        
            <meta charset="utf-8" />
            <title>Weight Conversion</title>

   </head>
   <body>
       <h1> Weight conversion</h1>
       <form asp-controller="Home"asp-action="UnitConversion"method="post">

           <p>
               <label asp-for="Weight">Please enter Weight  </label>
               <input asp-for="Weight" type="number" />
               <label asp-for="WeightUnit">Convert Kg to P</label>
               <input asp-for="WeightUnit" value="Kg2P" type="radio" />
               <label asp-for="WeightUnit"class="1space">Convert P to Kg</label>
               <input asp-for="WeightUnit" value="P2Kg"type="radio" />
               <span asp-validation-for="WeightUnit">  </span>
           </p>
           <p>
               <button type="submit">Submit</button>
           </p>
       </form>
       </body>
       </html>
