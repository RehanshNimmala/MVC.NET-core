@{
    ViewData["Title"] = "Home Page";
}

@model TempPractise.Models.TemperatureModel

<!DOCTYPE html>
<html>
    <head>
        
            <meta charset="utf-8" />
            <title>Temperature Conversion</title>

   </head>
   <body>
       <h1>Nimmala Temperature conversion</h1>
       <form asp-controller="Home"asp-action="Temperature"method="post">

           <p>
               <label asp-for="Temperature">Please enter temperature  </label>
               <input asp-for="Temperature" type="number" />
               <label asp-for="TemperatureUnit">Convert F to C</label>
               <input asp-for="TemperatureUnit" value="F2C" type="radio" />
               <label asp-for="TemperatureUnit"class="1space">Convert C to F</label>
               <input asp-for="TemperatureUnit" value="C2F"type="radio" />
               <span asp-validation-for="TemperatureUnit">  </span>
           </p>
           <p>
               <button type="submit">Submit</button>
           </p>
       </form>
    @{
        if (ViewBag.RoundTrip == "RoundTrip")
        {
            <p>@Html.Raw(Model.ConvertTemp())</p>
        }
    }
      

   </body>
</html>
